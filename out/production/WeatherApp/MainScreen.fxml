      <children>
            <ListView fx:id="CityList" layoutY="146.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="188.0" prefWidth="232.0" />
            <TextField fx:id="SearchCity" layoutY="337.0" prefHeight="27.0" prefWidth="171.0" promptText="Search a City or Country">
               <font>
                  <Font size="12.0" />
               </font>
            </TextField>
            <Button fx:id="SelectCity" layoutX="171.0" layoutY="337.0" mnemonicParsing="false" prefHeight="23.0" prefWidth="61.0" text="OK">
